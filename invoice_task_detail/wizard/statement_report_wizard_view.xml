<odoo>
    <record id="statement_wizard_form" model="ir.ui.view">
        <field name="name">statement.wizard.form</field>
        <field name="model">statement.of.account.wizard</field>
        <field name="arch" type="xml">
            <form string="Statement of Account">
                <group>
                    <field name="partner_id"/>
                    <field name="date_as_at"/>
                    <field name="account_type"/>
                </group>
                <footer>
                    <button string="Print"
                            type="object"
                            name="action_print"
                            class="btn-primary"/>
                    <button string="Cancel" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_statement_wizard" model="ir.actions.act_window">
        <field name="name">Statement of Account</field>
        <field name="res_model">statement.of.account.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>