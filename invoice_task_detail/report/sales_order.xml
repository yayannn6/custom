<odoo>

    <template id="report_saleorder_custom_smitiv">
            <t t-call="web.external_layout">
                <main>
                    <t t-foreach="docs" t-as="doc">
                        <!-- <t t-call="invoice_task_detail.report_header_smitiv"/> -->
                        <t t-call="invoice_task_detail.report_saleorder_custom_smitiv_document"/>
                        <!-- <t t-call="invoice_task_detail.report_footer_smitiv"/> -->
                    </t>
                </main>
            </t>
    </template>

    <!-- TEMPLATE BARU TANPA INHERIT -->
    <template id="report_saleorder_custom_smitiv_document">

        <!-- <t t-call="web.external_layout">
            <t t-foreach="docs" t-as="doc"> -->

                <div class="page" style="font-family:Times New Roman; font-size:13px;">

                    <!-- TITLE -->
                    <h2 style="text-align:center; font-weight:bold;">
                        QUOTATION
                    </h2>

                    <!-- HEADER BOX -->
                    <table style="width:100%; border:2px solid black; border-collapse:collapse; margin-bottom:20px;">
                        <tr>
                            <td style="width:50%; padding:5px;">
                                <strong>Date</strong> :
                                <span t-field="doc.date_order"/>
                            </td>
                            <td style="width:50%; padding:5px;">
                                <strong>Our Ref</strong> :
                                <span t-field="doc.name"/>
                            </td>
                        </tr>
                        <tr>
                            <td style="padding:5px;">
                                <strong>To</strong> :
                                <span t-field="doc.partner_id.name"/>
                            </td>
                            <td style="padding:5px;">
                                <strong>Tel</strong> :
                                <span t-field="doc.partner_id.phone"/>
                            </td>
                        </tr>
                        <tr>
                            <td style="padding:5px;">
                                <strong>Attn</strong> :
                                <span t-field="doc.partner_id.name"/>
                            </td>
                            <td style="padding:5px;">
                                <strong>Page</strong> :
                                <span class="page"/>
                            </td>
                        </tr>
                        <tr>
                            <td style="padding:5px;">
                                <strong>From</strong> :
                                <span t-field="doc.company_id.name"/>
                            </td>
                            <td></td>
                        </tr>
                    </table>

                    <p>
                        <strong>RE :</strong>
                        <span t-field="doc.client_order_ref"/>
                    </p>

                    <!-- <hr style="border:1px solid black;"/> -->
                    <p>
                      Dear Sir / Mdm, <br/>
                      With reference to your enquiry regarding the above mentioned subject, we are pleased to submit our quotation as follows :
                    </p>
                    <!-- TABLE -->
                    <table style="width:100%; border:2px solid black; border-collapse:collapse; min-height:400px;">
                        <thead>
                            <tr>
                                <th style="border:1px solid black;">S/No.</th>
                                <th style="border:1px solid black;">Description</th>
                                <th style="border:1px solid black;">Qty</th>
                                <th style="border:1px solid black;">Unit Price (S$)</th>
                                <th style="border:1px solid black;">Total (S$)</th>
                            </tr>
                        </thead>
                        <tbody>
                            <t t-set="i" t-value="1"/>
                            <t t-foreach="doc.order_line" t-as="line">
                                <tr>
                                    <td style="border:1px solid black; text-align:center;">
                                        <span t-esc="i"/>
                                        <t t-set="i" t-value="i+1"/>
                                    </td>
                                    <td style="border:1px solid black;">
                                        <span t-field="line.name"/>
                                    </td>
                                    <td style="border:1px solid black; text-align:center;">
                                        <span t-field="line.product_uom_qty"/>
                                    </td>
                                    <td style="border:1px solid black; text-align:right;">
                                        <span t-field="line.price_unit"/>
                                    </td>
                                    <td style="border:1px solid black; text-align:right;">
                                        <span t-field="line.price_subtotal"/>
                                    </td>
                                </tr>
                            </t>

                            <tr>
                                <td style="border:1px solid black; height:250px;"></td>
                                <td style="border:1px solid black;"></td>
                                <td style="border:1px solid black;"></td>
                                <td style="border:1px solid black;"></td>
                                <td style="border:1px solid black;"></td>
                            </tr>
                        </tbody>
                    </table>

                    <!-- TOTAL -->
                    <table style="width:35%; float:right; border-collapse:collapse; margin-top:10px;">
                        <tr>
                            <td style="border:1px solid black;"><strong>Total</strong></td>
                            <td style="border:1px solid black; text-align:right;">
                                <span t-field="doc.amount_untaxed"/>
                            </td>
                        </tr>
                        <tr>
                            <td style="border:1px solid black;"><strong>GST</strong></td>
                            <td style="border:1px solid black; text-align:right;">
                                <span t-field="doc.amount_tax"/>
                            </td>
                        </tr>
                        <tr>
                            <td style="border:1px solid black;"><strong>Net Total</strong></td>
                            <td style="border:1px solid black; text-align:right;">
                                <span t-field="doc.amount_total"/>
                            </td>
                        </tr>
                    </table>

                    <br/><br/>
                    
                    <table style="width:100%; margin-top:40px;">
                        <tr>
                            <td style="width:60%;">
                                Yours faithfully,<br/><br/>
                                <strong style="font-size:32px;">Sebastian Ong</strong><br/>
                                Project Director
                            </td>
                            <td style="width:40%; text-align:left;">
                                Accepted By<br/><br/><br/>
                                Name, Signature, Co. Stamp &amp; Date
                            </td>
                        </tr>
                    </table>

                </div>
<!-- 
            </t>
        </t> -->

    </template>

</odoo>
