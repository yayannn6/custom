<odoo>

    <template id="report_purchase_order_smitiv">
            <t t-call="web.external_layout">
                <main>
                    <t t-foreach="docs" t-as="o">
                        <!-- <t t-call="invoice_task_detail.report_header_smitiv"/> -->
                        <t t-call="invoice_task_detail.report_purchase_order_smitiv_document"/>
                        <!-- <t t-call="invoice_task_detail.report_footer_smitiv"/> -->
                    </t>
                </main>
            </t>
    </template>

    <template id="report_purchase_order_smitiv_document">
            <div class="page">
                    <style>
                        .invoice-title {
                            text-align: center;
                            font-size: 18px;
                            font-weight: bold;
                            margin-bottom: 10px;
                        }
                        .header-table td {
                            padding: 2px 5px;
                            font-size: 12px;
                            vertical-align: top;
                        }
                        .task-table {
                            width: 100%;
                            border-collapse: collapse;
                            font-size: 12px;
                            margin-top: 10px;
                            border: 1px solid black;
                        }
                        .task-table th {
                            border: 1px solid black;
                        }

                        .task-table td {
                            padding: 5px;
                        }

                        .task-table tbody td {
                            border-left: 1px solid black;
                            border-right: 1px solid black;
                            border-top: none;
                            border-bottom: none;
                        }

                        .task-table tbody tr:last-child td {
                            border-bottom: 1px solid black;
                        }

                        .text-right {
                            text-align: right;
                        }
                        .text-center {
                            text-align: center;
                        }

                        .total-table {
                            width: 100%;
                            border-collapse: collapse;
                            font-size: 12px;
                            margin-top: 10px;
                        }
                    </style>

                    <!-- TITLE -->
                    <h2 style="text-align:center; font-weight:bold;">
                        PURCHASE ORDER
                    </h2>

                    <!-- HEADER INFO -->
                    <table style="width:100%; border:1px solid black; border-collapse:collapse;">
                        <tr>
                            <td style="width:50%; padding:5px;">
                                <b>To :</b> <span t-field="o.partner_id.name"/><br/>
                                <b>QN :</b><br/>
                                <b>Attn :</b><br/>
                                <b>From :</b>
                            </td>
                            <td style="width:50%; padding:5px;">
                                <b>PO No :</b> <span t-field="o.name"/><br/>
                                <b>Date :</b> <span t-field="o.date_order"/><br/>
                                <b>Page :</b> 1 Page
                            </td>
                        </tr>
                    </table>

                    <br/>

                    <!-- TABLE PRODUCT -->
                    <table style="width:100%; border:1px solid black; border-collapse:collapse;">
                        <thead>
                            <tr>
                                <th style="border:1px solid black;">S/No.</th>
                                <th style="border:1px solid black;">Description</th>
                                <th style="border:1px solid black;">QTY</th>
                                <th style="border:1px solid black;">Unit Price $</th>
                                <th style="border:1px solid black;">Amount in $</th>
                            </tr>
                        </thead>
                        <tbody>
                            <t t-set="i" t-value="1"/>
                            <t t-foreach="o.order_line" t-as="line">
                                <tr>
                                    <td style="border:1px solid black; text-align:center;">
                                        <span t-esc="i"/>
                                    </td>
                                    <td style="border:1px solid black;">
                                        <span t-field="line.name"/>
                                    </td>
                                    <td style="border:1px solid black; text-align:right;">
                                        <span t-field="line.product_qty"/>
                                    </td>
                                    <td style="border:1px solid black; text-align:right;">
                                        <span t-field="line.price_unit"/>
                                    </td>
                                    <td style="border:1px solid black; text-align:right;">
                                        <span t-field="line.price_subtotal"/>
                                    </td>
                                </tr>
                                <t t-set="i" t-value="i+1"/>
                            </t>
                        </tbody>
                    </table>

                    <!-- TOTAL AREA -->
                    <table style="width:100%; border-collapse:collapse;">
                        <tr>
                            <td style="width:70%;"/>
                            <td style="width:30%;">
                                <table style="width:100%; border:1px solid black; border-collapse:collapse;">
                                    <tr>
                                        <td style="border:1px solid black;">Total</td>
                                        <td style="border:1px solid black; text-align:right;">
                                            <span t-field="o.amount_untaxed"/>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td style="border:1px solid black;">9% GST</td>
                                        <td style="border:1px solid black; text-align:right;">
                                            <span t-field="o.amount_tax"/>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td style="border:1px solid black;"><b>Net Total</b></td>
                                        <td style="border:1px solid black; text-align:right;">
                                            <b><span t-field="o.amount_total"/></b>
                                        </td>
                                    </tr>
                                </table>
                            </td>
                        </tr>
                    </table>

                    <br/>

                    <!-- NOTES -->
                    <div style="font-size:11px;">
                        <b>Please Note :</b><br/>
                        1 Delivery should be made to the above address or any other address specified by us.<br/>
                        2 Supply shall be in accordance with instructions, no substitute parts will be accepted without prior approval.<br/>
                        3 Delivery shall be on or before the Delivery Date stipulated above.<br/>
                        4 The supplier shall inform immediately, if for any reason, delivery is unable to adhere to these instructions.<br/>
                        5 The Company will not be liable for any goods received unless this order carries an authorized signature.
                    </div>

                    <br/><br/>

                    <!-- SIGNATURE -->
                    <div style="text-align:right;">
                        Approved By<br/><br/>
                        <b style="font-size:18px;">
                            Sebastian Ong
                        </b>
                    </div>

            </div>
    </template>

</odoo>
