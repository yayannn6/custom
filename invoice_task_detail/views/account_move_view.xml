<odoo>
    <record id="view_move_form_inherit_task_detail" model="ir.ui.view">
        <field name="name">account.move.form.task.detail</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">

            <!-- ATTN -->
            <xpath expr="//field[@name='partner_id']" position="after">
                <field name="attn"/>
            </xpath>

            <!-- Task Detail -->
            <xpath expr="//notebook" position="inside">
                <page string="Task Details">
                    <field name="task_line_ids">
                        <tree editable="bottom">
                            <field name="description"/>
                            <field name="quantity"/>
                            <field name="uom"/>
                            <field name="price"/>
                            <field name="total" readonly="1"/>
                        </tree>
                    </field>
                    <group>
                        <field name="amount_before_tax_manual"/>
                        <field name="gst_amount" readonly="1"/>
                        <field name="grand_total" readonly="1"/>
                    </group>
                </page>
            </xpath>

            <!-- Custom Totals (SAFE XPATH) -->
            <!-- <xpath expr="//field[@name='amount_total']" position="after">
                <group>
                    <field name="amount_before_tax_manual"/>
                    <field name="gst_amount" readonly="1"/>
                    <field name="grand_total" readonly="1"/>
                </group>
            </xpath> -->

        </field>
    </record>
</odoo>
