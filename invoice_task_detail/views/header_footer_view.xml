<odoo>

    <template id="external_layout_custom_header_footer"
              inherit_id="web.external_layout_standard">

        <!-- ================= HEADER ================= -->
        <xpath expr="//div[contains(@t-attf-class, 'header o_company_')]" position="replace">
            <div t-attf-class="header o_company_#{company.id}_layout"
                 style="text-align:center; margin-bottom:10px;">

                <img src="/invoice_task_detail/static/src/img/header.png"
                     style="max-width:100%; height:auto;"/>

            </div>
        </xpath>

        <!-- ================= FOOTER ================= -->
        <xpath expr="//div[contains(@class, 'o_footer')]" position="replace">
            <div class="o_footer"
                 style="text-align:center; width:100%;">

                <img src="/invoice_task_detail/static/src/img/footer.png"
                     style="max-width:60%;"/>

                <div style="font-size:10px; margin-top:5px;">
                    <span class="page"/> / <span class="topage"/>
                </div>

            </div>
        </xpath>

    </template>

</odoo>