<odoo>
    <record id="view_sale_order_form_custom" model="ir.ui.view">
        <field name="name">sale.order.form.custom</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">

            <!-- Tambah field di bawah customer -->
            <xpath expr="//field[@name='partner_id']" position="after">
                <field name="our_ref"/>
                <field name="attn"/>
                <field name="re_subject"/>
            </xpath>

            <!-- Tambah tab quotation notes -->
            <xpath expr="//notebook" position="inside">
                <page string="Quotation Notes">
                    <group>
                        <field name="delivery_terms"/>
                        <field name="validity_terms"/>
                        <field name="payment_terms_note"/>
                    </group>
                </page>
            </xpath>

        </field>
    </record>
</odoo>
