<odoo>
    <record id="res_config_settings_view_form_purchase_limit" model="ir.ui.view">
        <field name="name">res.config.settings.purchase.limit.form</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base.view_res_config_settings"/>
        <field name="arch" type="xml">
            <xpath expr="//div[hasclass('settings')]" position="inside">
                <div class="o_setting_box">
                    <div class="o_setting_left_pane">
                        <field name="purchase_limit_amount"/>
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="purchase_limit_amount"/>
                        <div class="text-muted">
                            Set the purchase amount limit that requires approval.
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>

</odoo>
