<odoo>
  <data>
    <record id="view_purchase_order_form_inherit_approval" model="ir.ui.view">
        <field name="name">purchase.order.form.approval</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">
            
            <!-- Tambahkan field approval_state ke form -->
            <field name="currency_id" position="after">
                <field name="approval_state" readonly="1" invisible="1"/>
            </field>

            <!-- Tambahkan tombol Approve -->
            <header position="inside">
                <button name="action_approve_order" type="object" string="Approve"
                    attrs="{'invisible': [('approval_state','!=','to_approve')]}"/>
            </header>
        </field>
    </record>


  </data>
</odoo>